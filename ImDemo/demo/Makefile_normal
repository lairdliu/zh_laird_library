TARGET=cmhi_test

PROJECT_ROOT_PATH = ..
PROJECT_INCLUDE_PATH = $(PROJECT_ROOT_PATH)/interface
PROJECT_LIB_PATH = $(PROJECT_ROOT_PATH)/target

HOST_SYSTEM = $(shell uname | cut -f 1 -d_)
SYSTEM ?= $(HOST_SYSTEM)

CXX = g++ -g
CXXFLAGS += -std=c++11
CXXFLAGS += -I.. -I$(PROJECT_INCLUDE_PATH)

LDFLAGS += -L$(PROJECT_LIB_PATH) -lcmhiim_ubuntu

OBJECTS	= \
	main.o

	
all: $(TARGET)

$(TARGET): $(OBJECTS)
	$(CXX) $^ $(LDFLAGS) -o $@
	@rm -f $(OBJECTS)

clean:
	@rm -f $(OBJECTS)
	@rm -f $(TARGET)
	
